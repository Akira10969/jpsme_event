# Environment configuration for GitHub Actions deployments

# Staging Environment
STAGING_HOST=your-staging-server.com
STAGING_USER=staging-user
STAGING_PATH=/var/www/staging/jpsme-event

# Production Environment  
PRODUCTION_HOST=your-production-server.com
PRODUCTION_USER=production-user
PRODUCTION_PATH=/var/www/html/jpsme-event

# Database Configuration (use GitHub Secrets for sensitive data)
DB_HOST=localhost
DB_NAME=jpsme_event
# DB_USER and DB_PASS should be set as GitHub Secrets

# Application Configuration
APP_ENV=production
APP_DEBUG=false
UPLOAD_MAX_SIZE=5M

# Notification Settings
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/DISCORD/WEBHOOK

# Security Settings
ENABLE_SECURITY_HEADERS=true
FORCE_HTTPS=true

# File Upload Paths
UPLOAD_PATH_NATCON=uploads/proof_natcon/
UPLOAD_PATH_ENROLLMENT=uploads/member_enrollments/
UPLOAD_PATH_PAYMENT=uploads/proof_payment/
